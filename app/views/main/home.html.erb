<h2><%= link_to "Termine", "/events/show" %></h2>
<hr class = "small">
<section>
  <% counter = 0%>
  <% @events.reverse.each do |event| %>
  <div class = "event">
    <%= event.event %> <br>
    <%= event.date %>
  </div>
    <% counter = counter + 1%>
    <% if counter > 7 %>
    <% break %>
    <% end %>
  <% end %>
</section>

<hr class = "big">

