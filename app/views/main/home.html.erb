<h2>Termine</h2>
<hr class = "small">
<section>
  <% counter = 0%>
  <% @events.reverse.each do |event| %>
  <div class = "event">
    <%= event.event %> <br>
    <%= event.date %>
  </div>
    <% counter = counter + 1%>
    <% if counter > 9 %>
    <% break %>
    <% end %>
  <% end %>
  <div class = "event">
    <%= link_to "mehr", "/events/show" %>
  </div>
</section>

<hr class = "big">

