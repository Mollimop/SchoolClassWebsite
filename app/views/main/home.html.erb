<hr class = "big">

<h2><%= link_to "Forum", "/forum_threads/show" %></h2>
<hr class = "small">
<section>
  <% counter = 0%>
  <% @threads.reverse.each do |thread| %>
  <div class = "event">
    <%= link_to "/posts/#{thread.id}" do %>
      <%= thread.title %> von <%= thread.user.name %> <br>
    <% end %>
    <%= "#{thread.text[0..200]}..." %>
  </div>
    <% counter = counter + 1%>
    <% if counter > 7 %>
    <% break %>
    <% end %>
  <% end %>
</section>
